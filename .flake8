[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
exclude =
    .git,
    __pycache__,
    .tox,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache
per-file-ignores =
    __init__.py:F401,F403
